        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.providerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.providerWebsite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apiUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apiKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isEnabled)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.providerID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.providerID">Details</a> |
