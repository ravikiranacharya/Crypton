@page
@model Crypton.Pages.Prices.EditModel

<h4>CurrencyPrice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CurrencyPrice.currencyPriceID" />
            <div class="form-group">
                <label asp-for="CurrencyPrice.currencyID" class="control-label"></label>
                <select asp-for="CurrencyPrice.currencyID" class="form-control" asp-items="ViewBag.currencyID"></select>
                <span asp-validation-for="CurrencyPrice.currencyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyPrice.providerID" class="control-label"></label>
                <select asp-for="CurrencyPrice.providerID" class="form-control" asp-items="ViewBag.providerID"></select>
                <span asp-validation-for="CurrencyPrice.providerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyPrice.priceDate" class="control-label"></label>
                <input asp-for="CurrencyPrice.priceDate" class="form-control" />
                <span asp-validation-for="CurrencyPrice.priceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyPrice.priceUSD" class="control-label"></label>
                <input asp-for="CurrencyPrice.priceUSD" class="form-control" />
                <span asp-validation-for="CurrencyPrice.priceUSD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyPrice.priceEuro" class="control-label"></label>
                <input asp-for="CurrencyPrice.priceEuro" class="form-control" />
                <span asp-validation-for="CurrencyPrice.priceEuro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyPrice.priceBTC" class="control-label"></label>
                <input asp-for="CurrencyPrice.priceBTC" class="form-control" />
                <span asp-validation-for="CurrencyPrice.priceBTC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
