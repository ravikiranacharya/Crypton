            <div class="form-group">
                <label asp-for="ConversionRate.conversionRate" class="control-label"></label>
                <input asp-for="ConversionRate.conversionRate" class="form-control" />
                <span asp-validation-for="ConversionRate.conversionRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConversionRate.conversionDate" class="control-label"></label>
