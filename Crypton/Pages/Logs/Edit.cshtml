@page
@model Crypton.Pages.Logs.EditModel

<h4>Log</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Log.logID" />
            <div class="form-group">
                <label asp-for="Log.status" class="control-label"></label>
                <input asp-for="Log.status" class="form-control" />
                <span asp-validation-for="Log.status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Log.description" class="control-label"></label>
                <input asp-for="Log.description" class="form-control" />
                <span asp-validation-for="Log.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Log.logDate" class="control-label"></label>
                <input asp-for="Log.logDate" class="form-control" />
                <span asp-validation-for="Log.logDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Log.alertID" class="control-label"></label>
                <select asp-for="Log.alertID" class="form-control" asp-items="ViewBag.alertID"></select>
                <span asp-validation-for="Log.alertID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Log.alertTypeID" class="control-label"></label>
                <select asp-for="Log.alertTypeID" class="form-control" asp-items="ViewBag.alertTypeID"></select>
                <span asp-validation-for="Log.alertTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
