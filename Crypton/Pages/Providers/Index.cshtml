<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].providerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].providerWebsite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].apiUrl)
            </th>
